import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class PlainPoker {
    
    public static void main(String[] args) {
        // counters for different hand types
        int fiveOfKind = 0;
        int fourOfKind = 0;
        int fullHouse = 0;
        int threeOfKind = 0;
        int twoPair = 0;
        int onePair = 0;
        int highCard = 0;
        
        try {
            File file = new File("src/hands.txt");
            
            // count how many hands we have first
            Scanner counter = new Scanner(file);
            int numHands = 0;
            while (counter.hasNextLine()) {
                counter.nextLine();
                numHands++;
            }
            counter.close();
            
            // store everything in arrays
            String[][] allHands = new String[numHands][5];
            int[] allBids = new int[numHands];
            String[] handTypes = new String[numHands];
            
            // now actually read the data
            Scanner scanner = new Scanner(file);
            int index = 0;
            
            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                String[] parts = line.split("\\|");
                String hand = parts[0];
                int bid = Integer.parseInt(parts[1]);
                String[] cards = hand.split(",");
                
                // save everything for later
                allHands[index] = cards;
                allBids[index] = bid;
                handTypes[index] = classifyHand(cards);
                
                // count the hand types while we're at it
                if (handTypes[index].equals("Five of a kind")) {
                    fiveOfKind++;
                } else if (handTypes[index].equals("Four of a kind")) {
                    fourOfKind++;
                } else if (handTypes[index].equals("Full house")) {
                    fullHouse++;
                } else if (handTypes[index].equals("Three of a kind")) {
                    threeOfKind++;
                } else if (handTypes[index].equals("Two pair")) {
                    twoPair++;
                } else if (handTypes[index].equals("One pair")) {
                    onePair++;
                } else {
                    highCard++;
                }
                
                index++;
            }
            scanner.close();
            
            // figure out ranks by comparing each hand to every other hand
            int totalValue = 0;
            
            for (int i = 0; i < numHands; i++) {
                int rank = 1;
                
                // compare this hand against all others
                for (int j = 0; j < numHands; j++) {
                    if (i != j) {
                        // if this hand beats the other one increase its rank
                        if (compareHands(allHands[i], handTypes[i], 
                                        allHands[j], handTypes[j]) > 0) {
                            rank++;
                        }
                    }
                }
                
                // add this hand's contribution to total value
                totalValue += rank * allBids[i];
            }
            
            // output results
            System.out.println("Number of five of a kind hands: " + fiveOfKind);
            System.out.println("Number of full house hands: " + fullHouse);
            System.out.println("Number of four of a kind hands: " + fourOfKind);
            System.out.println("Number of three of a kind hands: " + threeOfKind);
            System.out.println("Number of two pair hands: " + twoPair);
            System.out.println("Number of one pair hands: " + onePair);
            System.out.println("Number of high card hands: " + highCard);
            System.out.println("Total Bid Value: " + totalValue);
            
        } catch (FileNotFoundException e) {
            System.out.println("File not found!");
        }
    }
    
    // figure out what kind of hand we have
    public static String classifyHand(String[] cards) {
        int[] counts = new int[5];
        
        // count how many of each card we have
        for (int i = 0; i < 5; i++) {
            int count = 0;
            for (int j = 0; j < 5; j++) {
                if (cards[i].equals(cards[j])) {
                    count++;
                }
            }
            counts[i] = count;
        }
        
        // check what we've got
        int maxCount = 0;
        boolean hasThree = false;
        boolean hasTwo = false;
        
        for (int i = 0; i < 5; i++) {
            if (counts[i] > maxCount) {
                maxCount = counts[i];
            }
            if (counts[i] == 3) {
                hasThree = true;
            }
            if (counts[i] == 2) {
                hasTwo = true;
            }
        }
        
        // determine hand type based on counts
        if (maxCount == 5) {
            return "Five of a kind";
        } else if (maxCount == 4) {
            return "Four of a kind";
        } else if (hasThree && hasTwo) {
            return "Full house";
        } else if (maxCount == 3) {
            return "Three of a kind";
        } else if (maxCount == 2) {
            // figure out if it's one pair or two pair
            int numWithTwo = 0;
            for (int i = 0; i < 5; i++) {
                if (counts[i] == 2) {
                    numWithTwo++;
                }
            }
            // if 4 cards have count of 2 that means two pairs
            if (numWithTwo == 4) {
                return "Two pair";
            } else {
                return "One pair";
            }
        } else {
            return "High card";
        }
    }
    
    // compare two hands to see which one wins
    public static int compareHands(String[] hand1, String type1, 
                                   String[] hand2, String type2) {
        // first check hand types
        int typeValue1 = getHandTypeValue(type1);
        int typeValue2 = getHandTypeValue(type2);
        
        if (typeValue1 != typeValue2) {
            return typeValue1 - typeValue2;
        }
        
        // same hand type so compare cards one by one
        for (int i = 0; i < 5; i++) {
            int card1Value = getCardValue(hand1[i]);
            int card2Value = getCardValue(hand2[i]);
            
            if (card1Value != card2Value) {
                return card1Value - card2Value;
            }
        }
        
        return 0;
    }
    
    // convert hand type to a number for easier comparison
    public static int getHandTypeValue(String handType) {
        if (handType.equals("Five of a kind")) {
            return 7;
        } else if (handType.equals("Four of a kind")) {
            return 6;
        } else if (handType.equals("Full house")) {
            return 5;
        } else if (handType.equals("Three of a kind")) {
            return 4;
        } else if (handType.equals("Two pair")) {
            return 3;
        } else if (handType.equals("One pair")) {
            return 2;
        } else {
            return 1;
        }
    }
    
    // convert card names to numbers for comparison
    public static int getCardValue(String card) {
        if (card.equals("Ace")) {
            return 14;
        } else if (card.equals("King")) {
            return 13;
        } else if (card.equals("Queen")) {
            return 12;
        } else if (card.equals("Jack")) {
            return 11;
        } else {
            return Integer.parseInt(card);
        }
    }
}
