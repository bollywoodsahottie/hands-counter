import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
     
        // Initialize counters for each hand type
        int fiveOfKind = 0;
        int fourOfKind = 0;
        int fullHouse = 0;
        int threeOfKind = 0;
        int twoPair = 0;
        int onePair = 0;
        int highCard = 0;

        try {
            File file = new File("src/hands.txt");
            Scanner scanner = new Scanner(file);

            // Read through each line in the file
            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                String[] parts = line.split("\\|");
                String hand = parts[0];
                String[] cards = hand.split(",");

                // Classify the current hand
                String handType = classifyHand(cards);

            
                if (handType.equals("Five of a kind")) {
                    fiveOfKind++;
                } else if (handType.equals("Four of a kind")) {
                    fourOfKind++;
                } else if (handType.equals("Full house")) {
                    fullHouse++;
                } else if (handType.equals("Three of a kind")) {
                    threeOfKind++;
                } else if (handType.equals("Two pair")) {
                    twoPair++;
                } else if (handType.equals("One pair")) {
                    onePair++;
                } else {
                    highCard++;
                }
            }

            scanner.close();

            // Print results - note the order isn't consistent with poker rankings but whatever
            System.out.println("Number of five of a kind hands: " + fiveOfKind);
            System.out.println("Number of full house hands: " + fullHouse);
            System.out.println("Number of four of a kind hands: " + fourOfKind);
            System.out.println("Number of three of a kind hands: " + threeOfKind);
            System.out.println("Number of two pair hands: " + twoPair);
            System.out.println("Number of one pair hands: " + onePair);
            System.out.println("Number of high card hands: " + highCard);

        } catch (FileNotFoundException e) {
            System.out.println("File not found!");
        }
    }

    // This method determines what type of hand we're dealing with
    public static String classifyHand(String[] cards) {
        int[] counts = new int[5];

        // Count occurrences of each card
        for (int i = 0; i < 5; i++) {
            int count = 0;
            for (int j = 0; j < 5; j++) {
                if (cards[i].equals(cards[j])) {
                    count++;
                }
            }
            counts[i] = count;
        }

        // Figure out the maximum count and check for pairs/three of a kind
        int maxCount = 0;
        int pairs = 0;
        boolean hasThree = false;
        boolean hasTwo = false;

        for (int i = 0; i < 5; i++) {
            if (counts[i] > maxCount) {
                maxCount = counts[i];
            }

            // Check for pairs - this logic might be a bit off but seems to work
            if (counts[i] == 2 && i < 4 && cards[i].equals(cards[i+1])) {
                pairs++;
            }

            if (counts[i] == 3
  hasThree = true;
            }
            if (counts[i] == 2) {
                hasTwo = true;
            }
        }
        
        // Classify based on maxCount and other conditions
        if (maxCount == 5) {
            return "Five of a kind";
        } else if (maxCount == 4) {
            return "Four of a kind";
        } else if (hasThree && hasTwo) {
            return "Full house";
        } else if (maxCount == 3) {
            return "Three of a kind";
        } else if (maxCount == 2) {
            // Check for two pair
            int pairCount = 0;
            for (int i = 0; i < 5; i++) {
                if (counts[i] == 2) {
                    pairCount++;
                }
            }
            if (pairCount == 4) { // 4 because both cards in each pair get counted
                return "Two pair";
            } else {
                return "One pair";
            }
        } else {
            return "High card";
